        <properties.plugin.version>1.0.0</properties.plugin.version>
        <jacoco-plugin.version>0.8.7</jacoco-plugin.version>
        <checkstyle.plugin.version>3.1.2</checkstyle.plugin.version>
        <checkstyle.tool.version>8.43</checkstyle.tool.version>
        <pmd.plugin.version>3.14.0</pmd.plugin.version>
        <license.plugin.version>4.1</license.plugin.version>

        <!-- dependencies -->
        <quarkus.version>1.13.6.Final</quarkus.version>
        <karate.version>1.0.1</karate.version>
        <junit.jupiter.version>5.7.2</junit.jupiter.version>
        <hamcrest.version>2.2</hamcrest.version>
        <rdf4j.version>3.7.0</rdf4j.version>
        <semargl.version>0.7</semargl.version>
        <jakarta.version>3.0.0</jakarta.version>
        <jose4j.version>0.7.7</jose4j.version>
        <commons.text.version>1.9</commons.text.version>
        <commons.lang.version>3.12.0</commons.lang.version>
        <commons.cli.version>1.4</commons.cli.version>
        <mockito.version>3.10.0</mockito.version>
        <jandex.version>2.2.3.Final</jandex.version>
        <wiremock.version>2.27.2</wiremock.version>

        <!-- package info -->
        <package.name>${project.name}</package.name>
        <package.description>${project.description}</package.description>
        <package.organizationUrl>${project.organization.url}</package.organizationUrl>
        <package.url>${project.url}</package.url>
        <package.version>${project.version}</package.version>
        <package.buildTime>${maven.build.timestamp}</package.buildTime>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-bom</artifactId>
                <version>${quarkus.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.eclipse.rdf4j</groupId>
                <artifactId>rdf4j-bom</artifactId>
                <version>${rdf4j.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
